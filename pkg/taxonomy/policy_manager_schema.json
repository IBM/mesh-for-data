{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/IBM/the-mesh-for-data/pkg/taxonomy/policy_manager_schema.json",
    "title": "Policy Manager Taxonomy",
    "description": "Portion of the taxonomy owned by the policy manager.",
    "definitions": {
        "requester": {
            "type": "object",
            "properties": {
                "intent": { 
                    "type": "string",
                    "description": "The reason for which the data is to be used.",
                    "enum": ["Marketing", "Customer Support", "Fraud Detection", "Customer Behavior Analysis"]
                },
                "role": { 
                    "type": "string",
                    "description": "The position of the person in the organization processing the data.",
                    "enum": ["Sales", "HR", "Customer Support", "Business Analyst", "Data Scientist"]
                }
            },
            "required": ["intent"]
        },
        "action": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "The action to be taken on the data.",
                    "enum": ["read", "write", "delete"]
                },
                "processingLocation": {
                    "description": "The geography in which the processing will take place.",
                    "type": "string"
                }
            },
            "required": ["type"]
        },
        "governance_decision": {
            "type": "string",
            "description": "Result of the policy engine evaluation of rules for a given request.",
            "enum": ["allow", "deny", "transform"]
        }
    }
}