{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "application.values.schema.json",
    "title": "Application Values Taxonomy",
    "description": "Values contributed to by the mesh for data applications.",
    "definitions": {
        "app_info": {
            "type": "object",
            "properties": {
                "intent": { "$ref": "policymanager.structs.schema.json#/definitions/intent"},
                "role": { "$ref": "policymanager.structs.schema.json#/definitions/role"}
            },
            "required": ["intent"]
        },
        "interface": {
            "type": "object",
            "description": "Contains protocol and data format for arrow-flight",
            "properties": {
                "protocol": {
                    "type": "string",
                    "description": "The mechanism via which the data will be accessed."
                },
                "data_format": {
                    "type":"string",
                    "description": "The data format"
                }
            },
            "anyOf": [{
                "properties": {
                    "protocol": {
                        "enum":["m4d-arrow-flight"]
                    },
                    "data_format": {
                        "enum":["arrow"] 
                    }
                }
            },
            {
                "properties": {
                    "protocol": {
                        "enum":["kafka"]
                    },
                    "data_format": {
                        "enum":["json", "avro"] 
                    }
                }
            },
            {
                "properties": {
                    "protocol": {
                        "enum":["s3"]
                    },
                    "data_format": {
                        "enum":["csv", "parquet"] 
                    }
                }
            },
            {
                "properties": {
                    "protocol": {
                        "enum":["db2-jdbc"]
                    },
                    "data_format": {
                        "enum":["db2-jdbc"] 
                    }
                }
            }
            ]
        }
    }
} 