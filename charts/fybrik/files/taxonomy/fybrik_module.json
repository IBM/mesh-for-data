{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "fybrik_module.json",
    "title": "FybrikModule taxonomy",
    "type": "object",
    "description": "Values contributed to by Fybrik modules.",
    "properties": {
        "spec": {
            "type": "object",
            "properties": {
                "type": {"$ref": "taxonomy.json#/definitions/Type"},
                "capabilities": {
                    "type": "array",
                    "items": {"$ref": "taxonomy.json#/definitions/Capability"}
                },
                "dependencies": {
                    "type": "array",
                    "items": {"$ref": "taxonomy.json#/definitions/DependencyType"}
                }
            },
            "required": ["type", "capabilities"]
        }
    },
    "required": ["spec"]
} 