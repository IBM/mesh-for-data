{
  "title": "datacatalog.json",
  "definitions": {
    "CreateAssetRequest": {
      "type": "object",
      "required": [
        "destinationCatalogID",
        "resourceMetadata",
        "resourceDetails"
      ],
      "properties": {
        "credentials": {
          "description": "This optional field has the vault plugin path where the destination data credentials will be stored as kubernetes secrets",
          "type": "string"
        },
        "destinationAssetID": {
          "description": "This is an optional field provided to give information about the asset id to be used for the created asset.",
          "type": "string"
        },
        "destinationCatalogID": {
          "description": "This has the information about the destination catalog id that new asset that will be created with the information provided in ResourceMetadata and Details field will be stored.",
          "type": "string"
        },
        "resourceDetails": {
          "$ref": "#/definitions/ResourceDetails",
          "description": "This field has more details about the source asset like connection and dataformat"
        },
        "resourceMetadata": {
          "$ref": "#/definitions/ResourceMetadata",
          "description": "This field has the information about the source asset metadata like asset name, owner, geography, etc"
        }
      }
    },
    "CreateAssetResponse": {
      "type": "object",
      "required": [
        "assetID"
      ],
      "properties": {
        "assetID": {
          "description": "This field stores the newly created asset id based on the source asset information given in CreateAssetRequest object.",
          "type": "string"
        }
      }
    },
    "GetAssetRequest": {
      "type": "object",
      "required": [
        "assetID",
        "operationType"
      ],
      "properties": {
        "assetID": {
          "$ref": "taxonomy.json#/definitions/AssetID"
        },
        "operationType": {
          "$ref": "#/definitions/OperationType"
        }
      }
    },
    "GetAssetResponse": {
      "type": "object",
      "required": [
        "resourceMetadata",
        "resourceDetails",
        "credentials"
      ],
      "properties": {
        "credentials": {
          "description": "This has the vault plugin path where the data credentials will be stored as kubernetes secrets This value is assumed to be known to the catalog connector.",
          "type": "string"
        },
        "resourceDetails": {
          "$ref": "#/definitions/ResourceDetails"
        },
        "resourceMetadata": {
          "$ref": "#/definitions/ResourceMetadata"
        }
      }
    },
    "OperationType": {
      "description": "OperationType Type of operation requested for the asset",
      "type": "string",
      "enum": [
        "read"
      ]
    },
    "ResourceColumn": {
      "description": "ResourceColumn represents a column in a tabular resource",
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "description": "Name of the column",
          "type": "string"
        },
        "tags": {
          "$ref": "taxonomy.json#/definitions/Tags",
          "description": "Tags associated with the column"
        }
      }
    },
    "ResourceDetails": {
      "description": "ResourceDetails includes asset connection details",
      "type": "object",
      "required": [
        "connection"
      ],
      "properties": {
        "connection": {
          "$ref": "taxonomy.json#/definitions/Connection",
          "description": "Connection information"
        },
        "dataFormat": {
          "$ref": "taxonomy.json#/definitions/DataFormat",
          "description": "Data format"
        }
      }
    },
    "ResourceMetadata": {
      "description": "ResourceMetadata defines model for resource metadata",
      "type": "object",
      "properties": {
        "columns": {
          "description": "Columns associated with the asset",
          "type": "array",
          "items": {
            "$ref": "#/definitions/ResourceColumn"
          }
        },
        "geography": {
          "description": "Geography of the resource",
          "type": "string"
        },
        "name": {
          "description": "Name of the resource",
          "type": "string"
        },
        "owner": {
          "description": "Owner of the resource",
          "type": "string"
        },
        "tags": {
          "$ref": "taxonomy.json#/definitions/Tags",
          "description": "Tags associated with the asset"
        }
      }
    }
  }
}