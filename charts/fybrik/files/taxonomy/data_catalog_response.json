{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data Catalog Response",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "Asset": {
      "$ref": "#/definitions/AssetSpec"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "Asset"
  ],
  "definitions": {
    "AssetSpec": {
      "type": "object",
      "properties": {
        "secretRef": {
          "$ref": "#/definitions/SecretRef"
        },
        "assetMetadata": {
          "$ref": "#/definitions/AssetMetadata"
        },
        "assetDetails": {
          "$ref": "#/definitions/AssetDetails"
        }
      },
      "required": [
        "secretRef",
        "assetMetadata",
        "assetDetails"
      ]
    },
    "SecretRef": {
      "$ref": "taxonomy.json#/definitions/Authentication"
    },
    "AssetDetails": {
      "type": "object",
      "description": "Asset details",
      "properties": {
        "connection": {
          "$ref": "taxonomy.json#/definitions/Connection"
        },
        "dataFormat": {
          "type": "string"
        }
      },
      "required": [
        "connection"
      ]
    },
    "AssetMetadata": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string"
        },
        "geography": {
          "type": "string"
        },
        "tags": {
          "$ref": "taxonomy.json#/definitions/Tags"
        }
      }
    }
  }
}