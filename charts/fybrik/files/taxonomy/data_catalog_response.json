{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data Catalog Response",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the asset"
    },
    "asset": {
      "$ref": "#/definitions/assetSpec"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "asset"
  ],
  "definitions": {
    "assetSpec": {
      "type": "object",
      "properties": {
        "assetCredentials": {
          "$ref": "#/definitions/vaultPluginPath"
        },
        "assetMetadata": {
          "$ref": "#/definitions/assetMetadata"
        },
        "assetDetails": {
          "$ref": "#/definitions/assetDetails"
        }
      },
      "required": [
        "assetCredentials",
        "assetMetadata",
        "assetDetails"
      ]
    },
    "vaultPluginPath": {
      "type": "string",
      "description": "This has the vault plugin path where the data credentials will be stored as kubernetes secrets. This value is assumed to be known to the catalog connector."
    },
    "assetDetails": {
      "type": "object",
      "description": "Asset details",
      "properties": {
        "connection": {
          "$ref": "taxonomy.json#/definitions/Connection"
        },
        "dataFormat": {
          "$ref": "taxonomy.json#/definitions/Dataformat"
        }
      },
      "required": [
        "connection"
      ]
    },
    "assetMetadata": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string"
        },
        "geography": {
          "type": "string"
        },
        "metadata": {
          "$ref":"policy_manager_request.json#/definitions/Resource"
        }
      }
    }
  }
}