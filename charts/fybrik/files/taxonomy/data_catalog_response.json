{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Data Catalog Response",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "Asset": {
      "type": "object",
      "properties": {
        "spec": {
          "$ref": "#/definitions/AssetSpec"
        }
      },
      "required": [
        "spec"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "Asset"
  ],
  "definitions": {
    "AssetSpec": {
      "type": "object",
      "properties": {
        "secretRef": {
          "$ref": "#/definitions/SecretRef"
        },
        "assetMetadata": {
          "$ref": "#/definitions/AssetMetadata"
        },
        "assetDetails": {
          "$ref": "#/definitions/AssetDetails"
        }
      },
      "required": [
        "secretRef",
        "assetMetadata",
        "assetDetails"
      ]
    },
    "SecretRef": {
      "description": "Reference to a Secret resource holding credentials for this asset",
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the Secret resource (must exist in the same namespace)",
          "type": "string"
        },
        "$ref": "taxonomy.json#/definitions/Authentication"
      },
      "required": [
        "name"
      ]
    },
    "AssetDetails": {
      "type": "object",
      "description": "Asset details",
      "properties": {
        "connection": {
          "$ref": "taxonomy.json#/definitions/Connection"
        },
        "dataFormat": {
          "type": "string"
        }
      },
      "required": [
        "connection"
      ]
    },
    "AssetMetadata": {
      "owner": {
        "type": "string"
      },
      "geography": {
        "type": "string"
      },
      "tags": {
        "$ref": "taxonomy.json#/definitions/Tags"
      },
      "ComponentMetadata": {
        "type": "object",
        "description": "metadata for each component in asset (e.g., column)",
        "additionalProperties": {
          "$ref": "#/definitions//ComponentMetadata"
        }
      }
    },
    "ComponentMetadata": {
      "type": "object",
      "properties": {
        "componentType": {
          "type": "string"
        },
        "namedMetadata": {
          "additionalProperties": {
            "type": "string",
            "description": "Named terms, that exist in Catalog toxonomy and the values for these terms for columns we will have 'SchemaDetails' key, that willinclude technical schema details for this column TODO: Consider create special field for schema outside of metadata"
          }
        },
        "tags": {
          "description": "Tags - can be any free text added to a component (no taxonomy)",
          "$ref": "taxonomy.json#/definitions/Tags"
        }
      }
    }
  }
}