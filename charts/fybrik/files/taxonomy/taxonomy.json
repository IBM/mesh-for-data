{
  "title": "taxonomy.json",
  "definitions": {
    "Action": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/ActionName"
        }
      },
      "additionalProperties": true
    },
    "ActionName": {
      "type": "string"
    },
    "AppInfo": {
      "type": "object",
      "additionalProperties": true
    },
    "AssetID": {
      "type": "string"
    },
    "Capability": {
      "type": "string"
    },
    "Connection": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/ConnectionType"
        }
      },
      "additionalProperties": true
    },
    "ConnectionType": {
      "type": "string"
    },
    "DataFormat": {
      "type": "string"
    },
    "Decision": {
      "description": "Decision is a result of evaluating a configuration policy which satisfies the specified predicates",
      "type": "object",
      "properties": {
        "deploy": {
          "$ref": "#/definitions/DeploymentStatus",
          "description": "a decision regarding deployment: True = require, False = forbid, Unknown = allow"
        },
        "policy": {
          "$ref": "#/definitions/DecisionPolicy",
          "description": "Descriptions of policies that have been used for evaluation"
        },
        "restrictions": {
          "$ref": "#/definitions/Restrictions",
          "description": "Deployment restrictions on modules, clusters and additional resources"
        }
      }
    },
    "DecisionPerCapabilityMap": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Decision"
      }
    },
    "DecisionPolicy": {
      "description": "DecisionPolicy is a justification for a policy that consists of a unique id, id of a policy set and a human readable desciption",
      "type": "object",
      "required": [
        "ID"
      ],
      "properties": {
        "ID": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "policySetID": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "DeploymentStatus": {
      "type": "string",
      "enum": [
        "True",
        "False",
        "Unknown"
      ]
    },
    "EvaluationOutputStructure": {
      "description": "Result of query evaluation",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "$ref": "#/definitions/RuleDecisionList"
        }
      }
    },
    "Interface": {
      "type": "object",
      "required": [
        "protocol"
      ],
      "properties": {
        "dataformat": {
          "$ref": "#/definitions/DataFormat",
          "description": "DataFormat defines the data format type"
        },
        "protocol": {
          "$ref": "#/definitions/ConnectionType",
          "description": "Protocol defines the interface protocol used for data transactions"
        }
      }
    },
    "PluginType": {
      "type": "string"
    },
    "PolicyManagerRequestContext": {
      "type": "object",
      "additionalProperties": true
    },
    "PolicySetID": {
      "type": "string"
    },
    "ProcessingLocation": {
      "type": "string"
    },
    "Restriction": {
      "description": "Restriction maps a property to a list of allowed values. Semantics is a disjunction of values, i.e. a type can be either plugin or config.",
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "Restrictions": {
      "description": "Deployment restrictions on modules, clusters and additional resources that will be added in the future",
      "type": "object",
      "properties": {
        "clusters": {
          "$ref": "#/definitions/Restriction"
        },
        "modules": {
          "$ref": "#/definitions/Restriction"
        },
        "storageaccounts": {
          "$ref": "#/definitions/Restriction"
        }
      }
    },
    "RuleDecisionList": {
      "description": "A list of decisions per capability, e.g. {\"read\": {\"deploy\": \"True\"}, \"write\": {\"deploy\": \"False\"}}",
      "type": "array",
      "items": {
        "$ref": "#/definitions/DecisionPerCapabilityMap"
      }
    },
    "Tags": {
      "type": "object",
      "additionalProperties": true
    }
  }
}