{
  "title": "taxonomy.json",
  "definitions": {
    "Action": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/ActionName"
        }
      },
      "additionalProperties": true,
      "required": [
        "name"
      ]
    },
    "ActionName": {
      "type": "string"
    },
    "AppInfo": {
      "type": "object",
      "additionalProperties": true
    },
    "AssetID": {
      "type": "string",
      "description": "Asset ID of the asset to be queried in the catalog"
    },
    "AttributeType": {
      "type": "string",
      "enum": [
        "bool",
        "numeric",
        "string"
      ]
    },
    "Capability": {
      "type": "string"
    },
    "Connection": {
      "type": "object",
      "description": "Connection information",
      "properties": {
        "db2": {
          "$ref": "#/definitions/db2"
        },
        "fybrik-arrow-flight": {
          "$ref": "#/definitions/fybrik-arrow-flight"
        },
        "kafka": {
          "$ref": "#/definitions/kafka"
        },
        "name": {
          "description": "Name of the connection to the data source",
          "$ref": "#/definitions/ConnectionType"
        },
        "s3": {
          "$ref": "#/definitions/s3"
        }
      },
      "additionalProperties": true,
      "required": [
        "name"
      ]
    },
    "ConnectionType": {
      "type": "string",
      "description": "Name of the connection type to the data source"
    },
    "DataFlow": {
      "type": "string",
      "enum": [
        "read",
        "write",
        "delete",
        "copy"
      ]
    },
    "DataFormat": {
      "type": "string",
      "description": "Format of the data"
    },
    "InfrastructureElement": {
      "type": "object",
      "properties": {
        "arguments": {
          "type": "array",
          "description": "A list of arguments defining a specific metric, e.g. regions for a bandwidth",
          "items": {
            "type": "string"
          }
        },
        "attribute": {
          "type": "string",
          "description": "Attribute name defined in the taxonomy"
        },
        "description": {
          "type": "string",
          "description": "Description"
        },
        "instance": {
          "type": "string",
          "description": "A reference to the resource instance, e.g. storage account name"
        },
        "metricName": {
          "type": "string",
          "description": "Name of the metric specified in the metrics section"
        },
        "object": {
          "description": "A resource defined by the attribute (\"fybrikstorageaccount\",\"fybrikmodule\",\"cluster\")",
          "$ref": "#/definitions/InstanceType"
        },
        "value": {
          "type": "string",
          "description": "Attribute value"
        }
      },
      "required": [
        "attribute",
        "value",
        "object"
      ]
    },
    "InfrastructureMetrics": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "scale": {
          "description": "A scale of values (minimum and maximum) when applicable",
          "$ref": "#/definitions/RangeType"
        },
        "type": {
          "description": "Attribute type, e.g. numeric or string",
          "$ref": "#/definitions/AttributeType"
        },
        "units": {
          "description": "Measurement units",
          "$ref": "#/definitions/Units"
        }
      },
      "required": [
        "name",
        "type"
      ]
    },
    "InstanceType": {
      "type": "string",
      "enum": [
        "cluster",
        "fybrikmodule",
        "fybrikstorageaccount",
        "inter-region"
      ]
    },
    "Interface": {
      "type": "object",
      "properties": {
        "dataformat": {
          "description": "DataFormat defines the data format type",
          "$ref": "#/definitions/DataFormat"
        },
        "protocol": {
          "description": "Protocol defines the interface protocol used for data transactions",
          "$ref": "#/definitions/ConnectionType"
        }
      },
      "required": [
        "protocol"
      ]
    },
    "PluginType": {
      "type": "string"
    },
    "PolicyManagerRequestContext": {
      "type": "object",
      "additionalProperties": true
    },
    "ProcessingLocation": {
      "type": "string",
      "description": "location information"
    },
    "RangeType": {
      "type": "object",
      "properties": {
        "max": {
          "type": "integer"
        },
        "min": {
          "type": "integer"
        }
      }
    },
    "Tags": {
      "type": "object",
      "description": "Additional metadata for the asset/field",
      "additionalProperties": true
    },
    "Units": {
      "type": "string"
    },
    "db2": {
      "type": "object",
      "properties": {
        "database": {
          "type": "string"
        },
        "port": {
          "type": "string"
        },
        "ssl": {
          "type": "string"
        },
        "table": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "fybrik-arrow-flight": {
      "type": "object",
      "properties": {
        "hostname": {
          "type": "string"
        },
        "port": {
          "type": "string"
        },
        "scheme": {
          "type": "string"
        }
      },
      "required": [
        "hostname",
        "port",
        "scheme"
      ]
    },
    "kafka": {
      "type": "object",
      "properties": {
        "bootstrap_servers": {
          "type": "string"
        },
        "key_deserializer": {
          "type": "string"
        },
        "sasl_mechanism": {
          "type": "string"
        },
        "schema_registry": {
          "type": "string"
        },
        "security_protocol": {
          "type": "string"
        },
        "ssl_truststore": {
          "type": "string"
        },
        "ssl_truststore_password": {
          "type": "string"
        },
        "topic_name": {
          "type": "string"
        },
        "value_deserializer": {
          "type": "string"
        }
      }
    },
    "s3": {
      "type": "object",
      "description": "Connection information for S3 compatible object store",
      "properties": {
        "bucket": {
          "type": "string"
        },
        "endpoint": {
          "type": "string"
        },
        "object_key": {
          "type": "string"
        },
        "region": {
          "type": "string"
        }
      },
      "required": [
        "bucket",
        "endpoint",
        "object_key"
      ]
    }
  }
}