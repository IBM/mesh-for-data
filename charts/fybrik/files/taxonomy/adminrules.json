{
  "title": "adminrules.json",
  "definitions": {
    "AttributeOptimization": {
      "type": "object",
      "required": [
        "attribute",
        "directive"
      ],
      "properties": {
        "attribute": {
          "$ref": "taxonomy.json#/definitions/Attribute",
          "description": "Attribute name"
        },
        "directive": {
          "$ref": "#/definitions/OptimizationDirective",
          "description": "Optimization directive: minimize or maximize"
        },
        "weight": {
          "description": "Weight, a positive number not exceeding 1.0 Serialized as a string",
          "type": "string"
        }
      }
    },
    "Decision": {
      "description": "Decision is a result of evaluating a configuration policy which satisfies the specified predicates",
      "type": "object",
      "properties": {
        "deploy": {
          "$ref": "#/definitions/DeploymentStatus",
          "description": "a decision regarding deployment: True = require, False = forbid, Unknown = allow"
        },
        "policy": {
          "$ref": "#/definitions/DecisionPolicy",
          "description": "Descriptions of policies that have been used for evaluation"
        },
        "restrictions": {
          "$ref": "#/definitions/Restrictions",
          "description": "Deployment restrictions on modules, clusters and additional resources"
        }
      }
    },
    "DecisionPerCapability": {
      "type": "object",
      "required": [
        "capability",
        "decision"
      ],
      "properties": {
        "capability": {
          "$ref": "taxonomy.json#/definitions/Capability"
        },
        "decision": {
          "$ref": "#/definitions/Decision"
        }
      }
    },
    "DecisionPolicy": {
      "description": "DecisionPolicy is a justification for a policy that consists of a unique id, id of a policy set and a human readable desciption",
      "type": "object",
      "required": [
        "ID"
      ],
      "properties": {
        "ID": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "policySetID": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "DeploymentStatus": {
      "type": "string",
      "enum": [
        "True",
        "False",
        "Unknown"
      ]
    },
    "EvaluationOutputStructure": {
      "description": "Result of query evaluation",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "$ref": "#/definitions/RuleDecisionList"
        },
        "optimize": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OptimizationStrategy"
          }
        }
      }
    },
    "OptimizationDirective": {
      "type": "string",
      "enum": [
        "min",
        "max"
      ]
    },
    "OptimizationStrategy": {
      "description": "A list of attribute optimizations",
      "type": "object",
      "required": [
        "strategy",
        "policy"
      ],
      "properties": {
        "policy": {
          "$ref": "#/definitions/DecisionPolicy"
        },
        "strategy": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AttributeOptimization"
          }
        }
      }
    },
    "RangeType": {
      "type": "object",
      "properties": {
        "max": {
          "type": "integer"
        },
        "min": {
          "type": "integer"
        }
      }
    },
    "Restriction": {
      "type": "object",
      "required": [
        "property"
      ],
      "properties": {
        "property": {
          "type": "string"
        },
        "range": {
          "$ref": "#/definitions/RangeType"
        },
        "values": {
          "$ref": "#/definitions/StringList"
        }
      }
    },
    "Restrictions": {
      "description": "Deployment restrictions on modules, clusters and additional resources that will be added in the future",
      "type": "object",
      "properties": {
        "clusters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Restriction"
          }
        },
        "modules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Restriction"
          }
        },
        "storageaccounts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Restriction"
          }
        }
      }
    },
    "RuleDecisionList": {
      "description": "A list of decisions, e.g. [{\"capability\": \"read\", \"decision\": {\"deploy\": \"True\"}}, {\"capability\": \"write\", \"decision\": {\"deploy\": \"False\"}}]",
      "type": "array",
      "items": {
        "$ref": "#/definitions/DecisionPerCapability"
      }
    },
    "StringList": {
      "description": "Restriction maps a property to a list of allowed values. Semantics is a disjunction of values, i.e. a type can be either plugin or config.",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}