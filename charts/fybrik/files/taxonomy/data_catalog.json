{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Common definitions for Data Catalog",
  "type": "object",
  "definitions": {
    "credentials": {
      "$ref": "#/definitions/vaultPluginPath"
    },
    "vaultPluginPath": {
      "type": "string",
      "description": "This has the vault plugin path where the data credentials will be stored as kubernetes secrets. This value is assumed to be known to the catalog connector."
    },
    "details": {
      "type": "object",
      "description": "Asset details",
      "properties": {
        "connection": {
          "$ref": "taxonomy.json#/definitions/Connection"
        },
        "dataFormat": {
          "$ref": "taxonomy.json#/definitions/Dataformat"
        }
      },
      "required": ["connection"]
    },
    "Resource": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the data set"
        },
        "owner": {
          "type": "string"
        },
        "geography": {
          "type": "string"
        },
        "tags": {
          "$ref": "taxonomy.json#/definitions/Tags"
        },
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "tags": {
                "$ref": "taxonomy.json#/definitions/Tags"
              }
            },
            "required": ["name"]
          }
        }
      },
      "required": ["name"]
    }
  }
}
